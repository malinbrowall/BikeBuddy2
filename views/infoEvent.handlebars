
{{#if user}}
    <img src= "{{image}}" width="500" height="250">
    <h1> {{title}} </h1>
    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
    <label>{{date}}</label><br>
    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
    <label>Start: {{start}}</label><br>
    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
    <label>End: {{end}}</label>
</>


<!--formulär-->
<div class="box">
  <div class="col-sm-8">
  <a href="/attend/{{key}}" role="button" id="attend" class="btn btn-default">Attend »</a>
  </div>
    <div class="col-sm-8">
      <label>Description:</label>
      {{desc}}
      </div>
      <div class="col-sm-8">
        <label>Attending: {{attendants}}</label>
      </div>
      <div class="col-sm-8">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <label>Created by {{creator}}</label>
      </div>


</div>

<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css"/></link>


<!--Om användaren inte är inloggad visas denna-->
{{else}}
    <div class="jumbotron">
  <h1>Sign in</h1>
  <p>Welcome to Bikebuddy</p>
  <p>If you want to create a new event, you have to sign in!</p>
  <p>
</div>
<div class="col-md-offset-4">
    <a href="/auth/facebook/" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> Sign in with Facebook</a>
  </p>
</div>

{{/if}}
