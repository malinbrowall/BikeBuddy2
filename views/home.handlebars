<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Events</h1>
    <p id="time"></p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>ID: {{user.id}}</p>
<p>Name :{{user.displayName}}</p>
    </div>
  </div>

<!--event-->

{{# each title}}
{{# each ../key}}
<section class="panel-group" >
	<div class="panel panel-default col-md-7">

    <p> EVENTS : {{../this}} KEY : {{this}}</p>
    <div id="demo"></div>
			<p><a href="/p/#" role="button" class="btn btn-default">View details »</a>
        <a href="/attend/" role="button" class="btn btn-default">Attend »</a>
      </p>
  </div><br>
	<div class="panel panel-default col-md-7">
</section>
{{/each}}
{{/each}}

{{else}}
<div class="jumbotron">
  <h1>Welcome to Bikebuddy</h1>
  <h2>Sign in</h2>
  <p>
</div>
<div class="col-md-offset-4">
    <a href="/auth/facebook/" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> Sign in with Facebook</a>
  </p>
</div>

{{/if}}
