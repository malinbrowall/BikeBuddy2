<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Events</h1>
    <p id="time"></p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>ID: {{user.id}}</p>
<p>Name :{{user.displayName}}</p>
    </div>
  </div>

<!--event-->
{{# each title}}
<section class="panel-group" >
	<div class="panel panel-default col-md-7">
      <p>
        <a id="image" img src ="" width="500" height="250" ></a>
        </p>
    <div id="demo">{{this}}</div>
			<p><a id="key" href="" role="button" class="btn btn-default">View details »</a>
        <a href="/attend/{{../this}}" role="button" class="btn btn-default">Attend »</a>
        <a href="/unattend/{{../this}}" role="button" class="btn btn-default">Un Attend »</a>
      </p>
  </div><br>
	<div class="panel panel-default col-md-7">
</section>
{{/each}}

{{# each key}}
<script>
console.log("sd");
document.getElementById("key").href = "/p/{{this}}";

</script>
{{/each}}

{{# each img}}
<script>
document.getElementById("image").src= "{{this}}";
</script>
{{/each}}


{{else}}
<div class="jumbotron">
  <h1>Welcome to Bikebuddy</h1>
  <h2>Sign in</h2>
  <p>
</div>
<div class="col-md-offset-4">
    <a href="/auth/facebook/" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> Sign in with Facebook</a>
  </p>
</div>

{{/if}}
