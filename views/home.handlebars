<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Events</h1>
    <p id="time"></p>
  </div>
  <div class="panel panel-default">
  </div>

<!--event-->

{{# each title}}
<section class="panel-group" >
	<div class="panel panel-default col-md-12">


        <img src = "{{this.[0].image}}" width="230" height="130"/>
      <div class="box">
        <h3> {{this.[0].title}}</h3>
        <p>Date: {{this.[0].date}} </p>
        <p>Creator: {{this.[0].creator}}</p>
        <p> Attended: {{this.[0].attendants}}</p>

     </div>

			<p><a href="/p/{{this.[0].key}}" role="button" class="btn btn-default">{{this.[0].title}} »</a>
        <a href="/attend/{{this.[0].key}}" role="button" id="attend" class="btn btn-default">Attend »</a>
        <a href="/unattend/{{this.[0].key}}" role="button" id="unattend" class="btn btn-default">Un Attend »</a>
      </p>
  </div><br>
	<div class="panel panel-default col-md-7">
</section>
{{/each}}

<script>
document.getElementById("attend").onclick = function() {attendFunction()};
function attendFunction() {
    document.getElementById("attend");
    alert("Attended");
}
document.getElementById("unattend").onclick = function() {unattendFunction()};
function unattendFunction() {
    document.getElementById("unattend");
    alert("Unattended");
}
</script>


